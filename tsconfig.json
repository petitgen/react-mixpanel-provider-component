{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "jsx": "react",
    "lib": ["ES2015"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "outDir": "./lib",
    "strict": true,
    "sourceMap": false,
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
